#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export PYBUILD_NAME=distiller-migrator

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_install:
	dh_auto_install
	# Install migration scripts to /usr/share/distiller-migrator/
	install -d debian/distiller-migrator/usr/share/distiller-migrator
	# Scripts will be installed here when implemented

override_dh_installsystemd:
	# Install systemd units if needed
	dh_installsystemd --no-start --no-enable

override_dh_auto_test:
	# Skip tests during build (can be enabled later)
	:
